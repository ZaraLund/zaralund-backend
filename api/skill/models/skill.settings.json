{
  "kind": "collectionType",
  "collectionName": "skills",
  "info": {
    "name": "skill"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "level": {
      "type": "integer",
      "required": true
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "red",
        "green",
        "blue"
      ],
      "required": true,
      "default": "green"
    }
  }
}
